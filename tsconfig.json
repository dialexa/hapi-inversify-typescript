{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["index.ts", "db/seeds/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": [
    "src/typings/hapi.d.ts"
  ]
}
